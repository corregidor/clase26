<div class="container">

  <h1>Listado</h1>

  <div class="row">

      <div class="col-lg-6">
        <div class="well"><b>Tareas Incompletas</b></div>
        <% @todos.each do |todos| %>
            <% if !todos.completed %>
              <div class="well"><%= todos.description %></div>
            <% end %>
        <% end %>
      </div>
    <div class="col-lg-6">
        <div class="well"><b>Tareas Completas</b></div>
			<% @todos.each do |todos| %>
            	<% if todos.completed %>
              	<div class="well"><%= todos.description %></div>
            <% end %>
        <% end %>
     </div>

    </div><!-- /.row -->


</div>



